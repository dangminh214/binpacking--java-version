<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.ScrollPane?>

<BorderPane prefHeight="900" prefWidth="1600.0"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ui.MainController">

    <left>
        <VBox alignment="TOP_CENTER" prefHeight="668.0" prefWidth="266.0" spacing="5">
            <Label text="Rectangles number" />
            <TextField fx:id="rectanglesNumberField" promptText="Number of rectangles" />

            <Label text="Min Width" />
            <TextField fx:id="minWField" promptText="Min width" />

            <Label text="Max Width" />
            <TextField fx:id="maxWField" promptText="Max width" />

            <Label text="Min Height" />
            <TextField fx:id="minHField" promptText="Min Height" />

            <Label text="Max Height" />
            <TextField fx:id="maxHField" promptText="Max Height" />

            <Label text="Box Length" />
            <TextField fx:id="boxLField" promptText="Box Length">
                <font>
                    <Font size="12.0"/>
                </font>
            </TextField>

            <!-- RUN BUTTON -->
            <Button fx:id="runButton" text="Run Algorithm" onAction="#handleRun" />

            <!-- Runtime Label -->
            <Label fx:id="runtimeLabel" text="Runtime: " style="-fx-font-weight: bold;"/>

            <!-- Number of boxes -->
            <Label fx:id="boxesLabel" text="Boxes: " style="-fx-font-weight: bold;"/>

            <!-- Number of rectangles used -->
            <Label fx:id="rectanglesLabel" text="Rectangles: " style="-fx-font-weight: bold;"/>
        </VBox>
    </left>


    <center>
        <!-- Wrap the solution Pane in a ScrollPane -->
        <ScrollPane fitToWidth="true" fitToHeight="true">
            <Pane fx:id="solutionPane" prefWidth="800" prefHeight="600" style="-fx-background-color: lightgray;"/>
        </ScrollPane>
    </center>

</BorderPane>
